
#bold[ Command          Shortcut      Description]
------------------------------------------------------------------------------
 #bold[push]             <enter>       Push code to connected devices
 #bold[conn]             c             Open Steroids Connect screen

 #bold[sim]              s             Launch the iOS Simulator (OS X only)
 #bold[and]              a             Launch Android Emulator (#yellow[Experimental])
 #bold[gen]              g             Launch Genymotion Emulator (#yellow[Experimental])
 #bold[chrome]           cd            Launch Chrome dev tools (Android)
 #bold[safari <path>]    sd            Open Safari debugger for matching path in URL location
                                #underline[Note:] Enable Develop menu in: Safari -> Preferences -> Advanced
 #bold[edit]             e             Launch default editor

 $ <cmd> <args>                 Command will be run in the project directory.
 ยง <cmd> <args>

 #bold[quit]             q             Exits connect. Also: exit
                                #yellow[Experimental]: Run #bold[steroids connect] #cyan[--livereload] to enable live reload of the app